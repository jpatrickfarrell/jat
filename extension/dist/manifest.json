{
  "manifest_version": 3,
  "name": "JAT Browser Extension",
  "version": "1.0.0",
  "description": "JAT Browser Extension for Bug Reporting",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JAT Bug Reporter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ]
}