{
  "name": "jat-browser-extension",
  "version": "1.0.0",
  "description": "JAT Browser Extension for Bug Reporting",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:firefox": "vite build --config vite.config.firefox.ts",
    "build:all": "vite build && vite build --config vite.config.firefox.ts",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/* dist-firefox/*"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.5",
    "svelte": "^5.49.1",
    "typescript": "^5.3.3",
    "vite": "^6.4.1"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "webextension",
    "manifest-v3",
    "typescript",
    "vite",
    "bug-reporting"
  ],
  "author": "JAT Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.93.3"
  }
}
